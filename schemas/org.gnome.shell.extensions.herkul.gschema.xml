      <default>'Istanbul'</default>
      <summary>Default city for prayer times</summary>
      <description>The city to show prayer times for</description>
    </key>
    <key name="notify-enabled" type="b">
      <default>true</default>
      <summary>Enable notifications</summary>
      <description>Show notifications before prayer times</description>
    </key>
    <key name="sound-enabled" type="b">
      <default>true</default>
      <summary>Enable sound</summary>
      <description>Play sound with notifications</description>
    </key>
    <key name="language" type="s">
      <default>'en'</default>
      <summary>Interface language</summary>
      <description>Language for the interface (en, tr, de)</description>
    </key>
    <key name="apikey" type="s">
      <default>''</default>
      <summary>OpenWeatherMap API Key</summary>
      <description>API Key for accessing OpenWeatherMap service</description>
    </key>
  </schema>
</schemalist>