<?xml version="1.0" encoding="UTF-8"?>
<schemalist>
  <schema id="org.gnome.shell.extensions.herkul" path="/org/gnome/shell/extensions/herkul/">
    <key name="default-city" type="s">
      <default>'Istanbul'</default>
      <summary>Namaz vakitleri için varsayılan şehir</summary>
      <description>Namaz vakitleri için gösterileceği şehir</description>
    </key>
    <key name="notify-enabled" type="b">
      <default>true</default>
      <summary>Bildirimleri Etkinleştir</summary>
      <description>Namaz vakitlerinden önce bildirim göster</description>
    </key>
    <key name="sound-enabled" type="b">
      <default>true</default>
      <summary>Sesi Etkinleştir</summary>
      <description>Bildirimlerle birlikte ses çal</description>
    </key>
    <key name="language" type="s">
      <default>'tr'</default>
      <summary>Arayüz dili</summary>
      <description>Sadece Türkçe desteklenmektedir</description>
    </key>
    <key name="apikey" type="s">
      <default>''</default>
      <summary>OpenWeatherMap API Anahtarı</summary>
      <description>OpenWeatherMap servisine erişim için API Anahtarı</description>
    </key>
    <key name="current-station" type="s">
      <default>'herkul'</default>
      <summary>Mevcut Radyo İstasyonu</summary>
      <description>Son seçilen radyo istasyonu kimliği</description>
    </key>
  </schema>
</schemalist>